schema {
    query: Query
#    mutation: Mutation
}

type Query {
    allLinks(filter: LinkFilter, skip: Int = 0, first: Int = 0): [Link]
}
#
#type Mutation {
#    createLink(url: String!, description: String!): Link
#}

type Link {
    id: ID!
    url: String!
    description: String
    postedBy: User
}

type User {
    id: ID!
    name: String!
    email: String
    password: String
}

input LinkFilter {
    description_contains: String
    url_contains: String
}

scalar DateTime